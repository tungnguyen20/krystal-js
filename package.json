{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*",
        "example/*"
    ],
    "scripts": {
        "clean": "yarn workspaces foreach --include=\"@krystal-js/*\" -ptv run clean",
        "build": "yarn workspaces foreach --include=\"@krystal-js/*\" -ptv run build",
        "bundle": "yarn workspaces foreach --include=\"@krystal-js/*\" -pv run bundle"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "^2.3.1"
    }
}
